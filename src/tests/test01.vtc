varnishtest "Test pj vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import pj from "${vmod_topbuild}/src/.libs/libvmod_pj.so";

	sub vcl_deliver {
		set resp.http.hello = pj.hello("World")
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello == "Hello, World"
}

client c1 -run
