varnishtest "Test pj vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import pj from "${vmod_topbuild}/src/.libs/libvmod_pj.so";
	import std from "${vmod_topbuild}/libs/libvmod_std.so";

	sub vcl_deliver {
		set resp.http.crypt = pj.encrypt("abc", "SecretKey");
		set resp.http.decrypt = pj.decrypt("ei1Fom8a9bY=", "SecretKey");


	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.crypt == "ei1Fom8a9bY="
	expect resp.http.decrypt == "abc" 
}

client c1 -run
